    "prepublishOnly": "browserify -p bundle-collapser/plugin -e lib/magicPenMedia -s magicPenMedia > magicPenMedia.min.js"
  },
  "dependencies": {
    "gettemporaryfilepath": "^1.0.0",
    "lodash": "^4.17.11",
    "mime": "^1.3.4"
