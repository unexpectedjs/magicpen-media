{
  "name": "magicpen-media",
  "version": "1.5.1",
  "description": "Add media support to magicpen (images, audio, video)",
  "repository": {
    "type": "git",
    "url": "https://github.com/unexpectedjs/magicpen-media.git"
  },
  "main": "lib/magicPenMedia.js",
  "author": "Andreas Lind <andreaslindpetersen@gmail.com>",
  "devDependencies": {
    "browserify": "^16.2.3",
    "bundle-collapser": "^1.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^2.13.1",
    "eslint-config-onelint": "^1.2.0",
    "magicpen": "^4.12.0",
    "mocha": "^2.2.5",
    "nyc": "^13.1.0",
    "sinon": "^1.15.4",
    "unexpected": "^10.39.1",
    "unexpected-fs": "^3.0.0",
    "unexpected-sinon": "^10.10.1"
  },
  "files": [
    "lib",
    "magicPenMedia.min.js"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "mocha",
    "ci": "npm test && npm run lint && npm run coverage",
